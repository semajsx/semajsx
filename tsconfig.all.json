{
  "extends": "./tsconfig.lib.json",
  "compilerOptions": {
    "composite": false,
    "noEmit": true,
    "rootDir": null,
    "outDir": null
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "examples/**/*.ts",
    "examples/**/*.tsx"
  ],
  "exclude": ["node_modules", "dist", "coverage"]
}
