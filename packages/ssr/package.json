{
  "name": "@semajsx/ssr",
  "version": "0.1.0",
  "description": "Server-side rendering and Island architecture for SemaJSX",
  "files": [
    "dist",
    "src"
  ],
  "type": "module",
  "types": "./dist/index.d.mts",
  "exports": {
    ".": "./src/index.ts",
    "./client": "./src/client/index.ts",
    "./package.json": "./package.json"
  },
  "publishConfig": {
    "exports": {
      ".": "./dist/index.mjs",
      "./client": "./dist/client/index.mjs",
      "./package.json": "./package.json"
    }
  },
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "typecheck": "tsc --noEmit",
    "example:ssr-islands": "bun run examples/ssr-islands/server.tsx",
    "example:bun-server": "bun run examples/bun-server/server.tsx"
  },
  "dependencies": {
    "@semajsx/core": "workspace:*",
    "@semajsx/dom": "workspace:*",
    "@semajsx/logger": "workspace:*",
    "@semajsx/signal": "workspace:*",
    "glob": "^13.0.0",
    "lightningcss": "^1.31.1",
    "minimatch": "^10.1.1"
  },
  "devDependencies": {
    "@semajsx/configs": "workspace:*",
    "tsdown": "^0.20.1",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "vite": "^7.0.0"
  },
  "peerDependenciesMeta": {
    "vite": {
      "optional": true
    }
  }
}
