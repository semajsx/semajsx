{
  "extends": "@semajsx/configs/tsconfig.lib.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "./src",
    "outDir": "./dist",
    "paths": {
      "semajsx": ["./src/index.ts"],
      "semajsx/*": ["./src/*"],
      "@/*": ["./src/*"],
      "@semajsx/core": ["../core/src/index.ts"],
      "@semajsx/dom": ["../dom/src/index.ts"],
      "@semajsx/dom/jsx-runtime": ["../dom/src/jsx-runtime.ts"],
      "@semajsx/dom/jsx-dev-runtime": ["../dom/src/jsx-dev-runtime.ts"],
      "@semajsx/server": ["../server/src/index.ts"],
      "@semajsx/server/client": ["../server/src/client/index.ts"],
      "@semajsx/signal": ["../signal/src/index.ts"],
      "@semajsx/terminal": ["../terminal/src/index.ts"],
      "@semajsx/terminal/jsx-runtime": ["../terminal/src/jsx-runtime.ts"],
      "@semajsx/terminal/jsx-dev-runtime": [
        "../terminal/src/jsx-dev-runtime.ts"
      ],
      "@semajsx/utils": ["../utils/src/index.ts"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": [
    "node_modules",
    "dist",
    "coverage",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/*.d.ts"
  ]
}
