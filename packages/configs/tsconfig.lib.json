{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Library Package",
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    // Add DOM for library packages that may use DOM APIs
    "lib": ["ES2021", "DOM", "DOM.Iterable"],

    // JSX support
    "jsx": "react-jsx",

    // Build options for library packages
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "isolatedDeclarations": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": [
    "node_modules",
    "dist",
    "coverage",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/*.d.ts"
  ]
}
