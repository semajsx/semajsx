{
  "name": "@semajsx/ssg",
  "version": "0.1.0",
  "description": "Static site generation with collections and MDX support for SemaJSX",
  "type": "module",
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "exports": {
    ".": "./src/index.ts",
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@semajsx/server": "workspace:*",
    "@semajsx/dom": "workspace:*",
    "@semajsx/core": "workspace:*",
    "@semajsx/signal": "workspace:*",
    "@mdx-js/mdx": "^3.0.0",
    "zod": "^4.0.0",
    "gray-matter": "^4.0.3",
    "glob": "^13.0.0"
  },
  "devDependencies": {
    "@semajsx/configs": "workspace:*",
    "@types/glob": "^9.0.0",
    "tsdown": "^0.16.6",
    "typescript": "^5.9.3",
    "vitest": "^4.0.13"
  },
  "peerDependencies": {
    "vite": "^7.0.0",
    "tailwindcss": "^4.0.0",
    "@tailwindcss/vite": "^4.0.0"
  },
  "peerDependenciesMeta": {
    "vite": {
      "optional": true
    },
    "tailwindcss": {
      "optional": true
    },
    "@tailwindcss/vite": {
      "optional": true
    }
  }
}
