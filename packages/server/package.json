{
  "name": "@semajsx/server",
  "version": "0.1.0",
  "description": "Server-side rendering and Island architecture for SemaJSX",
  "type": "module",
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "exports": {
    ".": "./src/index.ts",
    "./client": "./src/client/index.ts",
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "typecheck": "tsc --noEmit",
    "example:ssr-islands": "bun run examples/ssr-islands/server.tsx",
    "example:bun-server": "bun run examples/bun-server/server.tsx",
    "example:ssg-tailwind": "bun run examples/ssg-tailwind/server.tsx"
  },
  "dependencies": {
    "@semajsx/core": "workspace:*",
    "@semajsx/dom": "workspace:*",
    "@semajsx/logger": "workspace:*",
    "@semajsx/signal": "workspace:*"
  },
  "devDependencies": {
    "@semajsx/configs": "workspace:*",
    "tsdown": "^0.16.6",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "vite": "^7.0.0",
    "tailwindcss": "^4.0.0",
    "@tailwindcss/vite": "^4.0.0"
  },
  "peerDependenciesMeta": {
    "vite": {
      "optional": true
    },
    "tailwindcss": {
      "optional": true
    },
    "@tailwindcss/vite": {
      "optional": true
    }
  }
}
