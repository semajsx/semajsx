{
  "name": "@semajsx/tailwind",
  "version": "0.1.0",
  "description": "Tailwind-style utility classes for SemaJSX - type-safe and tree-shakeable",
  "keywords": [
    "css",
    "tailwind",
    "tree-shaking",
    "type-safe",
    "utility-classes"
  ],
  "license": "MIT",
  "author": "lidessen",
  "files": [
    "dist"
  ],
  "type": "module",
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "exports": {
    ".": "./src/index.ts",
    "./package.json": "./package.json"
  },
  "publishConfig": {
    "exports": {
      ".": "./dist/index.mjs",
      "./package.json": "./package.json"
    }
  },
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@semajsx/style": "workspace:*"
  },
  "devDependencies": {
    "@semajsx/configs": "workspace:*",
    "tsdown": "^0.20.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
