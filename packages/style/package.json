{
  "name": "@semajsx/style",
  "version": "0.1.0",
  "description": "Modular styling system for SemaJSX - tree-shakeable CSS with native syntax",
  "keywords": [
    "css",
    "css-in-js",
    "style",
    "styling",
    "tree-shaking"
  ],
  "license": "MIT",
  "author": "lidessen",
  "files": [
    "dist"
  ],
  "type": "module",
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "exports": {
    ".": "./src/index.ts",
    "./react": "./src/react.ts",
    "./vue": "./src/vue.ts",
    "./package.json": "./package.json"
  },
  "publishConfig": {
    "exports": {
      ".": "./dist/index.mjs",
      "./react": "./dist/react.mjs",
      "./vue": "./dist/vue.mjs",
      "./package.json": "./package.json"
    }
  },
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest --config vitest.config.ts",
    "test:node": "vitest --config vitest.node.config.ts",
    "test:all": "vitest run --config vitest.config.ts && vitest run --config vitest.node.config.ts",
    "test:run": "vitest run --config vitest.config.ts && vitest run --config vitest.node.config.ts",
    "test:coverage": "vitest run --coverage",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@semajsx/signal": "workspace:*"
  },
  "devDependencies": {
    "@semajsx/configs": "workspace:*",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "lightningcss": "^1.30.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tsdown": "^0.16.8",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16",
    "vue": "^3.5.0"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "vue": ">=3.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "vue": {
      "optional": true
    }
  }
}
