{
  "name": "@semajsx/logger",
  "version": "0.1.0",
  "description": "Rich terminal logging utility for SemaJSX",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@semajsx/core": "workspace:*",
    "@semajsx/terminal": "workspace:*"
  },
  "devDependencies": {
    "@semajsx/configs": "workspace:*",
    "tsdown": "^0.16.4",
    "typescript": "^5.8.3"
  },
  "publishConfig": {
    "access": "public"
  }
}
