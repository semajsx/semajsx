{
  "name": "@semajsx/logger",
  "version": "0.1.0",
  "description": "Rich terminal logging utility for SemaJSX",
  "type": "module",
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "exports": {
    ".": "./src/index.ts",
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@semajsx/core": "workspace:*",
    "@semajsx/terminal": "workspace:*"
  },
  "devDependencies": {
    "@semajsx/configs": "workspace:*",
    "tsdown": "^0.16.4",
    "typescript": "^5.8.3"
  }
}
