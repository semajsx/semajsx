{
  "name": "@semajsx/logger",
  "version": "0.1.0",
  "description": "Rich terminal logging utility for SemaJSX",
  "files": [
    "dist",
    "src"
  ],
  "type": "module",
  "types": "./dist/index.d.mts",
  "exports": {
    ".": "./src/index.ts",
    "./package.json": "./package.json"
  },
  "publishConfig": {
    "exports": {
      ".": "./dist/index.mjs",
      "./package.json": "./package.json"
    }
  },
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "typecheck": "tsc --noEmit",
    "example:basic": "bun run examples/logger/basic.tsx",
    "example:showcase": "bun run examples/logger/showcase.tsx"
  },
  "dependencies": {
    "@semajsx/core": "workspace:*",
    "@semajsx/terminal": "workspace:*"
  },
  "devDependencies": {
    "@semajsx/configs": "workspace:*",
    "tsdown": "^0.20.1",
    "typescript": "^5.9.3"
  }
}
