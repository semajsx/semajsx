{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "noEmit": true,
    "jsxImportSource": "semajsx/dom",
    "baseUrl": ".",
    "paths": {
      "semajsx": ["./src/index.ts"],
      "semajsx/jsx-runtime": ["./src/jsx-runtime.ts"],
      "semajsx/jsx-dev-runtime": ["./src/jsx-dev-runtime.ts"],
      "semajsx/signal": ["./src/signal/index.ts"],
      "semajsx/dom": ["./src/dom/index.ts"],
      "semajsx/dom/jsx-runtime": ["./src/dom/jsx-runtime.ts"],
      "semajsx/dom/jsx-dev-runtime": ["./src/dom/jsx-dev-runtime.ts"],
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "examples/bun-server/**/*.ts",
    "examples/bun-server/**/*.tsx",
    "examples/vite-counter/**/*.ts",
    "examples/vite-counter/**/*.tsx",
    "examples/performance-test/**/*.ts",
    "examples/performance-test/**/*.tsx",
    "examples/type-tests/dom.tsx",
    "tests/runtime/**/*.ts",
    "tests/runtime/**/*.tsx",
    "tests/signal/**/*.ts",
    "tests/signal/**/*.tsx"
  ]
}
