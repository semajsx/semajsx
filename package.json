{
  "name": "semajsx-monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "Monorepo for SemaJSX - A signal-based reactive JSX runtime for building modern web applications",
  "keywords": [
    "framework",
    "jsx",
    "reactive",
    "signal",
    "typescript",
    "ui"
  ],
  "license": "MIT",
  "author": "lidessen",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "type": "module",
  "scripts": {
    "build": "bun run --filter '*' build",
    "dev": "bun run --filter '*' dev",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsgo --build --pretty",
    "typecheck:tsc": "bun run --filter '*' typecheck",
    "typecheck:compare": "bun run typecheck:tsc && bun run typecheck",
    "clean": "bun run --filter '*' clean && rm -rf node_modules",
    "format": "oxfmt",
    "format:check": "oxfmt --check",
    "lint": "oxlint packages",
    "lint:fix": "oxlint --fix packages",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.0",
    "@commitlint/config-conventional": "^20.3.0",
    "@types/bun": "^1.3.5",
    "@types/node": "^25.0.3",
    "@typescript/native-preview": "^7.0.0-dev.20260108.1",
    "@vitest/coverage-v8": "^4.0.16",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "oxfmt": "^0.23.0",
    "oxlint": "^1.38.0",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
