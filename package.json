{
  "name": "semajsx-monorepo",
  "version": "0.1.0",
  "description": "Monorepo for SemaJSX - A signal-based reactive JSX runtime for building modern web applications",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "bun run --filter '*' build",
    "dev": "bun run --filter '*' dev",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "typecheck": "bun run --filter '*' typecheck",
    "typecheck:native": "tsgo --build --pretty",
    "typecheck:compare": "bun run typecheck && bun run typecheck:native",
    "clean": "bun run --filter '*' clean && rm -rf node_modules",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "oxlint packages",
    "lint:fix": "oxlint --fix packages",
    "prepare": "husky"
  },
  "keywords": [
    "jsx",
    "signal",
    "reactive",
    "ui",
    "framework",
    "typescript"
  ],
  "author": "lidessen",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@prettier/plugin-oxc": "^0.0.5",
    "@types/bun": "^1.3.3",
    "@types/node": "^24.10.1",
    "@typescript/native-preview": "^7.0.0-dev.20260105.1",
    "@vitest/coverage-v8": "^4.0.13",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "oxlint": "^1.29.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
