{
  "name": "semajsx-monorepo",
  "version": "0.1.0",
  "description": "Monorepo for SemaJSX - A signal-based reactive JSX runtime for building modern web applications",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "bun run --filter '*' build",
    "dev": "bun run --filter '*' dev",
    "test": "vitest",
    "test:run": "vitest run",
    "typecheck": "bun run --filter '*' typecheck",
    "clean": "bun run --filter '*' clean && rm -rf node_modules",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "oxlint packages",
    "lint:fix": "oxlint --fix packages",
    "prepare": "husky"
  },
  "keywords": [
    "jsx",
    "signal",
    "reactive",
    "ui",
    "framework",
    "typescript"
  ],
  "author": "lidessen",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@prettier/plugin-oxc": "^0.0.4",
    "@types/bun": "latest",
    "@types/node": "^22.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "oxlint": "^1.28.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
